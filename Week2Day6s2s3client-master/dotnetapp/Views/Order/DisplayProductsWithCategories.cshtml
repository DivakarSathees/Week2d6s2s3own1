@model List<Product>

<h2>All Products with Categories</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@(product.Category != null ? product.Category.CategoryName : "N/A")</td>
            </tr>
        }
    </tbody>
</table>
